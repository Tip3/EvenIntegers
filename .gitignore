int main()
{
	int val1, val2;
	
	cout << "This programm checks even numbers between the 2 integers you enter\n";
	cout << "Please enter the starting integer followed by 'Enter' and your ending integer\n";
	cin >> val1 >> val2;

	do {
		val1++;
		if (val1 % 2 == 0) {
